<Alloy>
	<ScrollView backgroundColor="#B2DAF6" height="Ti.UI.SIZE" scrollType="vertical" >
		<View id="scrollContainer">
			<View layout="horizontal" height="Ti.UI.SIZE" width="Ti.UI.FILL">
				<View width="30%">
					<ImageView id="userProfileImage"/>
				</View>
				<View layout="vertical" width="70%">
					<Label id="name"/>
					<Label id="experience"/>
					<Label id="location"/>
					<ImageView id="stars"/>
				</View>
			</View>
			<Label id="intro"/>
			<TextArea id="introDetail"/>
			<View layout="horizontal" top="15">
				<ImageView id="callImage"/>
				<Label id="mobilenumber"/>
			</View>
			<View layout="horizontal" top="10">
				<ImageView id="emailImage"/>
				<Label id="emailid"/>
			</View>
			<View layout="horizontal" top="10">
				<ImageView id="locationImage"/>
				<Label id="locDistance"/>
			</View>
			<!--<ScrollView id="coursesView">-->
				<View id="coursesScrollContainer">
					<Label id="coursesOffered"/>
				</View>
			<!--</ScrollView>-->
		</View>
	</ScrollView>
</Alloy>